<libuc:BaseUserControl x:Class="Checkers.UserControls.PlayerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:libuc="clr-namespace:Map.UserControls;assembly=Map"
             mc:Ignorable="d" Padding="0, 10">
    
    <Grid>
        
        <!-- Player's username -->
        <TextBlock
            Text="{Binding Username}"
            Foreground="{Binding Color}"
            FontSize="20" 
            HorizontalAlignment="Left"
            Padding="15, 0, 0, 0"/>
        
        <TextBlock 
            Text="{Binding PiecesCount, StringFormat='Remaining pieces: {0}'}"
            Foreground="{Binding Color}"
            FontSize="20"
            HorizontalAlignment="Right"
            Padding="0, 0, 15, 0" />
            
    </Grid>
    
</libuc:BaseUserControl>

